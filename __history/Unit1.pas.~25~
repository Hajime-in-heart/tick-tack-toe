procedure TForm1.Panel2Click(Sender: TObject);
begin
  if i=1 then begin
  panel2.Caption:='X';
  flag:=false;
  Krestik_nolik;
  end;
  if i=2 then begin
  if flag then
  begin
  Panel2.Caption:='X';
  flag:=false;
  Yslovie;
  end
  else
  begin
  Panel2.Caption:='O';
  flag:=true;
  Yslovie2;
  end;
  end;
  Panel2.Enabled:=false;
end;

